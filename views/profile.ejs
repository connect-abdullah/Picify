<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Picify Profile</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/profile.css" />

  </head>
  <body class="d-flex flex-column align-items-center py-4">

    <!-- Profile Card Section -->
    <div class="profile-card shadow-sm text-center mb-5">
      <img
        src="<%= user.dp %> "
        alt="Profile"
        class="rounded-circle border border-4 border-light mb-3"
        style="width: 150px; height: 150px; object-fit: cover"
      />
      <h2 class="fw-bold mb-1"><%= user.fullname %></h2>
      <p class="text-muted mb-3">@<%= user.username %></p>

      <div class="d-flex justify-content-center gap-4 mb-4 flex-wrap">
        <div class="stat d-flex align-items-center gap-2">
          <i class="fa-regular fa-star text-warning"></i>
          <span><%= user.email %></span>
        </div>
      </div>

      <div class="d-flex justify-content-center gap-3 flex-wrap mb-3">
        <a href="/feed" class="btn btn-outline-primary rounded-pill px-4">Feed</a>
        <a href="/logout" class="btn btn-outline-danger rounded-pill px-4">Log Out</a>
        <a href="/profile/edit" class="btn btn-outline-success rounded-pill px-4">Edit Profile</a>
      </div>
      

      <!-- Upload Form -->
      <div class="upload-container mt-4">
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="file" name="file" accept="image/*" class="form-control mb-2" required />
          <input type="text" name="filecaption" placeholder="Enter caption..." class="form-control mb-2" required />
          <button type="submit" class="btn btn-success w-100">Upload</button>
        </form>
      </div>
    </div>

    <!-- Posts For Profile-->
    <div class="container">
      <div class="masonry-grid">
        <% user.posts.forEach(post => { %>
          <div class="masonry-item">
            <img src="<%= post.image %>" alt="<%= post.postText %>">
            <div class="caption"><%= post.postText %></div>
            <!-- Delete Icon (Initially hidden) -->
            <button class="delete-btn" data-post-id="<%= post._id %>">‚ùå</button>
          </div>
        <% }) %>
      </div>
    </div>
    

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/profile.js"></script>
  </body>
</html>
