<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Saved Posts | Picify</title>
  <link rel="stylesheet" href="/stylesheets/feed.css" />
</head>
<body>

  <header>
    <h1>Saved Posts</h1>
    <a href="/profile" class="profile-btn">Go to Profile</a>
  </header>

  <div class="container">
    <% posts.forEach(post => { %>
        <div class="box">
            <a href="<%= post.image %>">
              <img src="<%= post.image %>" alt="<%= post.postText %>" />
            </a>
            <div class="caption"><%= post.postText %></div>
            <div class="author"><%= post.user.username %></div>
            <div class="actions">
                <button class="like-btn" data-id="<%= post._id %>">‚ù§Ô∏è Like (<span><%= post.likes.length %></span>)</button>
                <button class="remove-btn" data-id="<%= post._id %>" onclick="removeSavedPost('<%= post._id %>')">‚ùå Remove</button>
            </div>
          </div>          
    <% }) %>
  </div>

  
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="/scripts/feed.js"></script>

  <script>
    function savePost(postId) {
    fetch(`/feed/save/${postId}`, {
        method: 'POST'
    })
    .then(res => res.json())
    .then(data => {
    const btn = document.querySelector(`.save-btn[data-id="${postId}"]`);
    if (data.saved) {
    btn.classList.add('saved');
    btn.textContent = '‚úÖ Saved';
    } else {
    btn.classList.remove('saved');
    btn.textContent = 'üíæ Save';
  }
})
.catch(err => {
  console.error(err);
  alert('Error saving post.');
});
}

function removeSavedPost(postId) {
  fetch(`/profile/remove/${postId}`, {
    method: 'POST'
  })
  .then(res => {
    if (res.ok) {
      // Optional: visually remove the post or reload
      document.querySelector(`.remove-btn[data-id="${postId}"]`).closest('.box').remove();
    } else {
      alert('Failed to remove saved post.');
    }
  })
  .catch(err => {
    console.error(err);
    alert('Error removing post.');
  });
}

  </script>
  
</body>
</html>
